<tr>
  <td><%= speech.id %></td>
  <td><%= topic.subject %></td>
  <td><%= truncate(topic.abstract, length:350, seperator: ' ') %></td>
  <td>
    <% topic.speakers.each do |speaker| %>
        <%= speaker.name %><br />
    <% end %>
  </td>
  <td>
    <%= link_to "+1", upvote_admin_speech_url(speech, subdomain: @conference.slug) %>
    <%= link_to "-1", downvote_admin_speech_url(speech, subdomain: @conference.slug) %>
    <%= link_to t("general.details"), admin_speech_url(speech, subdomain: @conference.slug) %>
  </td>
</tr>
