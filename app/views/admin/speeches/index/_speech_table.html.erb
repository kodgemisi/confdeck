<% cache [speech_type, "table", I18n.locale] do %>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= speech_type.type_name %> (<%= speech_type.speeches.count %> Ba≈üvuru)</h3>
            <div class="panel-toolbar text-right">
              <!-- option -->
              <div class="option">
                <button class="btn up" data-toggle="panelcollapse"><i class="arrow"></i></button>
              </div>
              <!--/ option -->
            </div>
          </div>
          <div class="panel-body  panel-collapse pull out">
            <table class="table table-bordered table-hover speech-table" id="table<%= speech_type.id %>">
            <thead>
            <tr>
              <th>#</th>
              <th><%= t "topics.subject" %></th>
              <th><%= t "topics.abstract" %></th>
              <th><%= t "topics.speakers" %></th>
              <th><%= t "speeches.state" %></th>
              <th><%= t "speeches.points" %></th>
              <th><%= t "speeches.actions" %></th>
            </tr>
            </thead>
            <tbody>
            <% speech_type.speeches.each do |speech| %>
                <%= render "admin/speeches/index/table_row", speech: speech %>
            <% end %>
            </tbody>
          </table>
          </div>

        </div>
      </div>
    </div>
<% end %>
