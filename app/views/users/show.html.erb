<div class="user-profile" id="<%= dom_id(@user) %>">

    <div class="header">
        <!-- info -->
        <div class="info bottom">
          <ul class="list-table">
            <li class="text-left" style="width:80px;">
              <img class="img-circle" src="<%= @user.avatar_url(70) %>" alt="" width="70px" height="70px">
            </li>
            <li class="text-left">
              <h4 class="semibold ellipsis nm"><%= @user.display_name %></h4>
              <!--<p class="ellipsis nm"><i class="ico-location"></i> Hong Kong</p>-->
            </li>
          </ul>
        </div>
    </div>
    <div role="tabpanel" class="panel">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#speeches" role="tab" data-toggle="tab"><%= t("users.speeches") %></a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active panel-body" id="speeches">
              <% @speeches.each do |speech| %>
                  <%= render "shared/speeches/speech", speech: speech %>
              <% end %>
            </div>
        </div>
    </div>
</div>