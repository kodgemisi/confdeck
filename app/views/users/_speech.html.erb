<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <div class="panel speech" id="<%= dom_id(speech) %>">
      <%= speech_ribbon(speech).html_safe %>
      <!-- User info -->
      <ul class="list-table pa15">
        <li class="text-left pl5">
          <p class="ellipsis nm"><span class="semibold"><%= link_to t("speeches.speech_title", subject: speech.topic.subject), [speech.conference, speech] %></span></p>
          <p class="text-muted nm"><%= timeago_tag speech.created_at.to_time, :lang => I18n.locale %></p>
        </li>
      </ul>
      <!--/ User info -->
      <hr class="nm"><!-- horizontal line -->
      <div class="panel-body">
        <%= render "conferences/dashboard/speech/speech_body", speech: speech %>
      </div>
      <!-- panel footer -->
      <div class="panel-footer">
        <ul class="list-table">
          <li>
            <div class="img-group img-group-stack">
              <% speech.topic.speakers.each do |speaker| %>
                  <div class="speaker">
                    <%= link_to image_tag(speaker.avatar_url(35), class: "img-circle"), speaker_path(speaker), title: speaker.name, class: "tt" %>
                  </div>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
      <!--/ panel footer -->
      <hr class="nm"><!-- horizontal line -->
      <!-- Toolbar -->

      <%= render "conferences/dashboard/speech/speech_toolbar", speech: speech %>
      <%= render "conferences/dashboard/speech/speech_comments", comments: speech.comments, speech: speech, open: false %>
    </div>
  </div>

</div>